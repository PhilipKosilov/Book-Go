<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/splashFragment">

    <include app:graph="@navigation/auth_graph" />
    <include app:graph="@navigation/tabs_graph" />

    <fragment
        android:id="@+id/tabsFragment"
        android:name="com.example.bookgo.presentation.tabs.TabsFragment"
        android:label="fragment_tabs"
        tools:layout="@layout/fragment_tabs">
        <deepLink
            android:id="@+id/deepLink2"
            app:uri="android-app://bookgo.app/tabs" />
    </fragment>

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.bookgo.presentation.splash.SplashFragment"
        android:label="LoginFragment">
        <action
            android:id="@+id/action_splashFragment_to_auth_graph"
            app:destination="@id/auth_graph"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_tabsFragment"
            app:destination="@id/tabsFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>